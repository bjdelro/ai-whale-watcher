# AI Whale Watcher - Configuration
# Copy to .env and fill in your values:  cp .env.example .env

# Your wallet private key (export from MetaMask / Coinbase Wallet)
PRIVATE_KEY=your_private_key_here

# Trading mode: paper | dry_run | live
TRADING_MODE=live

# Live trading limits
LIVE_MAX_TRADE=1.0
LIVE_MAX_EXPOSURE=50.0

# Slack webhook for trade alerts (optional but recommended)
# Get from: https://api.slack.com/apps → Create App → Incoming Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Anthropic API key for LLM intelligence (optional)
# Enables: market tagging (C1), correlation detection (C2), strategy review (C3)
# Uses Haiku — estimated cost <$1/month
ANTHROPIC_API_KEY=
